<li>
  <%= gravatar_for user, :size => 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? %>
  | <%= link_to "delete", user, :method => :delete,
                                :confirm => "You are going to completely delete #{user.name}s account. Are you sure?",
                                :title => "Delete #{user.name}" %>
  <% end %>
</li>